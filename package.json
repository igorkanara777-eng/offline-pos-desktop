{
  "name": "offline-pos-desktop",
  "version": "0.1.3",
  "private": true,
  "type": "commonjs",
  "main": "electron/main.js",

 {
  "scripts": {
    "build:ui": "vite build",
    "build:main": "esbuild electron/main.ts --bundle --platform=node --format=cjs --external:electron --outfile=electron/main.js",
    "build:preload": "esbuild electron/preload.ts --bundle --platform=node --format=cjs --external:electron --outfile=electron/preload.js",
    "build": "npm run build:ui && npm run build:main && npm run build:preload",
    "build:win": "electron-builder -w --x64 --publish=never --config.win.icon=build/icon.png"
  }
}


  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },

  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "electron": "28.3.3",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.23.0",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "vite": "^5.4.0"
  },

  "build": {
    "appId": "com.offlinepos.desktop",
    "productName": "Offline POS",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "electron/main.js",
      "electron/preload.js",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}

