{
  "name": "offline-pos-desktop",
  "version": "0.1.3",
  "private": true,
  "description": "Offline POS desktop app",
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "build:ui": "vite build",
    "install-app-deps": "electron-builder install-app-deps",
    "build:win": "electron-builder --win nsis --x64 -p never"
  },
  "dependencies": {
    "better-sqlite3": "11.5.0"
  },
  "devDependencies": {
    "@types/node": "20.11.30",
    "electron": "31.7.7",
    "electron-builder": "24.13.3",
    "typescript": "5.5.4",
    "vite": "5.4.19"
  },
  "build": {
    "appId": "com.igorkanara.offlinepos",
    "productName": "Offline POS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**",
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": ["node_modules/better-sqlite3/**/*"],
    "win": {
      "target": "nsis",
      "artifactName": "Offline-POS-Setup-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
