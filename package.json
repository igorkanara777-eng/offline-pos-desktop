{
  "name": "offline-pos-desktop",
  "version": "0.1.3",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "build:ui": "vite build",
    "install-app-deps": "electron-builder install-app-deps",
    "build:win": "electron-builder --win --x64"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "better-sqlite3": "9.6.0",
    "electron-store": "8.1.0"
  },
  "devDependencies": {
    "electron": "28.2.10",
    "electron-builder": "24.13.3",
    "typescript": "5.5.4",
    "vite": "5.4.19",
    "concurrently": "8.2.0"
  },
  "build": {
    "appId": "com.offline.pos",
    "productName": "Offline POS",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "asar": true,
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
