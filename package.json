{
  "name": "offline-pos-desktop",
  "version": "0.1.3",
  "private": true,
  "description": "Offline POS desktop app (Electron + Vite + React)",
  "author": "You",
  "license": "MIT",

  "main": "electron/main.js",

  "scripts": {
    "dev": "vite",
    "build:ui": "vite build",
    "build:electron": "esbuild electron/main.ts --bundle --platform=node --format=cjs --external:better-sqlite3 --outfile=electron/main.js",
    "install-app-deps": "electron-builder install-app-deps",
    "build:win": "electron-builder -w --x64"
  },

  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "electron": "^28.2.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },

  "devDependencies": {
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.23.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^5.4.19"
  },

  "build": {
    "appId": "com.offlinepos.desktop",
    "productName": "Offline POS",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
