{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../electron",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Node",
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts", "../src/backend/**/*.js"]
}
